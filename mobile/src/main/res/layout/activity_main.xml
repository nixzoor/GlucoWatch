<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Vnos obroka"
        android:id="@+id/Btn_obrok"
        android:onClick="activityDodajObrok" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Vnos aktivnosti"
        android:id="@+id/Btn_aktivnost"
        android:layout_marginTop="38dp"
        android:onClick="activityDodajAktivnost"
 />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Vnos meritve"
        android:id="@+id/btnDodajMeritve"
        android:layout_marginTop="38dp"
        android:onClick="activityDodajMeritev"
 />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Vnos Uporabe zdravila"
        android:id="@+id/btnVnosZdravila"
        android:onClick="activityDodajVnosZdravila"
        android:layout_marginTop="10dp"
 />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Podatki Uporabnika"
        android:id="@+id/btnPodatkiUporabnika"
        android:onClick="activityPodatkiUporabnika"


        android:layout_marginTop="10dp"
 />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="testno obvestilo"
        android:id="@+id/notificationBtn"
        android:layout_centerHorizontal="true" />

</LinearLayout>
