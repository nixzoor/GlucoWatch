<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fzv.glucowatch.dodajanje_podatkov_uporabnika">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Vpišite ime"
    android:id="@+id/textViewIme"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editTextIme"
    android:layout_below="@+id/textViewIme"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Vpišite priimek"
    android:id="@+id/textViewPriimek"
    android:layout_below="@id/editTextIme"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editTextPriimek"
    android:layout_below="@+id/textViewPriimek"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Izberite datum rojstva"
    android:id="@+id/textViewDatumRojstva"
    android:layout_below="@id/editTextPriimek"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<DatePicker
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/datePicker"
    android:layout_below="@+id/textViewDatumRojstva"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:calendarViewShown="false"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Vpišite spol"
    android:id="@+id/textViewSpol"
    android:layout_below="@id/datePicker"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editTextSpol"
    android:layout_below="@+id/textViewSpol"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Višina"
    android:id="@+id/textView9"
    android:layout_below="@+id/editTextSpol"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editTextVisina"
    android:layout_below="@+id/textView9"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Teža"
    android:id="@+id/textViewTeza"
    android:layout_below="@+id/editTextVisina"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editTextTeza"
    android:layout_below="@+id/textViewTeza"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Zaposlitveni status"
    android:id="@+id/textView10"
    android:layout_below="@+id/editTextTeza"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editTextStatus"
    android:layout_below="@+id/textView10"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tip bolezni"
    android:id="@+id/textViewTip"
    android:layout_below="@+id/editTextStatus"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editTextTip"
    android:layout_below="@+id/textViewTip"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Osnovno zdravilo"
    android:id="@+id/textViewzdravil"
    android:layout_below="@+id/editTextTip"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editTextZdravilo"
    android:layout_below="@+id/textViewzdravil"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/editTextTip"
    android:layout_alignEnd="@+id/editTextTip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predviden cas zajtrka"
            android:id="@+id/textViewcasZajtrka"
            android:layout_below="@+id/editTextZdravilo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePickerZajtrk"
            android:layout_below="@+id/textViewcasZajtrka"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predviden cas kosila"
            android:id="@+id/textViewCasKosila"
            android:layout_below="@+id/timePickerZajtrk"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePickerKosilo"
            android:layout_below="@+id/textViewCasKosila"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predviden cas vecerje"
            android:id="@+id/textViewCasVecerje"
            android:layout_below="@+id/timePickerKosilo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePickerVecerja"
            android:layout_below="@+id/textViewCasVecerje"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Shrani podatke"
    android:id="@+id/button2"
    android:layout_below="@+id/timePickerVecerja"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:onClick="dodajPodatkeUporabnika" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textViewPrikazPodatkovUporabnika"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:height="700px"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>
