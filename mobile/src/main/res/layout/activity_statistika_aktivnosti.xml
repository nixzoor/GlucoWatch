<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fzv.glucowatch.statistika_aktivnosti"
    android:background="#ff00d4ff">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Povprečno trajanje aktivnosti: "
        android:id="@+id/textView20"
        android:textColor="#fffffefa"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimalno trajanje aktivnosti:"
        android:id="@+id/textView21"
        android:layout_marginTop="29dp"
        android:textColor="#fffffefa"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/txtAvg10Trajanje"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maksimalno trajanje aktivnosti:  "
        android:id="@+id/textView22"
        android:layout_marginTop="27dp"
        android:textColor="#fffffefa"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/txtMinTrajanje"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtPovprecnoTrajanje"
        android:textColor="#fffffefa"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtMinTrajanje"
        android:textColor="#fffffefa"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/txtAvg10Trajanje"
        android:layout_alignStart="@+id/txtAvg10Trajanje"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtMaxTrajanje"
        android:textColor="#fffffefa"
        android:textAlignment="center"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Povprečno trajanje aktivnosti(zadnjih 10 dni): "
        android:id="@+id/textView23"
        android:layout_marginTop="27dp"
        android:textColor="#fffffefa"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/txtPovprecnoTrajanje"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtAvg10Trajanje"
        android:textColor="#fffffefa"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
</RelativeLayout>
