<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fzv.glucowatch.dodajanjeMeritve"
    android:background="#ff00d4ff">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextVrednstGlukoze"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/button"
        android:onClick="dodajMeritev"
        android:layout_below="@+id/editTextVrednstGlukoze"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVseMeritve"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextVrednstGlukoze"
        android:layout_alignEnd="@+id/editTextVrednstGlukoze"
        android:layout_below="@+id/button"
        android:layout_above="@+id/button15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vrednost izmerjene glukoze"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffffefa"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Napovedni model"
        android:id="@+id/button15"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewVseMeritve"
        android:layout_alignEnd="@+id/textViewVseMeritve"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff4b969f"
        android:textColor="#ffdef3f5"
        android:onClick="activityNapovedniModelClick" />

</RelativeLayout>
