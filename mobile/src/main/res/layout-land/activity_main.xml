<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ff00d4ff"
    android:weightSum="1">

    <ImageView
        android:layout_width="261dp"
        android:layout_height="43dp"
        android:id="@+id/imageView"
        android:background="@drawable/gluco" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_weight="0.91">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/Btn_obrok"
            android:onClick="activityDodajObrok"
            android:layout_gravity="left|top"
            android:background="@drawable/dva"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnVnosZdravila"
            android:onClick="activityDodajVnosZdravila"
            android:layout_gravity="center"
            android:background="@drawable/striri"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button9"
            android:onClick="activityDodajMeritev"
            android:layout_gravity="right|top"
            android:background="@drawable/tri"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnVnosZdravila"
            android:layout_toStartOf="@+id/btnVnosZdravila"
            android:layout_marginRight="33dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/Btn_aktivnost"
            android:onClick="activityDodajAktivnost"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/ena"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Btn_obrok"
            android:layout_toEndOf="@+id/Btn_obrok"
            android:layout_marginLeft="33dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATISTIKA"
            android:onClick="activityStatistika"
            android:id="@+id/textView11"
            android:textColor="#ffffffff"
            android:background="#ff00d4ff"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:layout_above="@+id/textView11"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="PODATKI UPORABNIKA"
            android:onClick="activityPodatkiUporabnika"
            android:id="@+id/textView11"
            android:textColor="#ffffffff"
            android:background="#ff00d4ff"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
